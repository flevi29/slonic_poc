{
  "compilerOptions": {
    "strict": true,
    "module": "es2022",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "target": "es2022",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": ["node_modules", "dist"]
}
